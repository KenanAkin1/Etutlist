@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid py-5" style="background: linear-gradient(90deg, #0b1af3 0%, /*#6dd5ed 30%*/ #a11010 100%); min-height: 85vh;">
    <div class="container">
        <div class="text-center text-white mb-5">
            <h1 class="display-3 fw-bold mb-3">
                <i class="bi bi-calendar-check-fill"></i> 
                Etüt ve Ders Planlama Sistemi
            </h1>
            <p class="lead fs-4">Modern ve kapsamlı personel, etüt ve ders programı yönetim sistemi</p>
        </div>

        <!-- Etüt Planlama Araçları -->
        <div class="mb-5">
            <h2 class="text-white mb-4 text-center">
                <i class="bi bi-calendar-event"></i> Etüt Planlama Araçları
            </h2>
            <div class="row g-4">
                <!-- Personel Yönetimi -->
                <div class="col-md-3">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-people-fill display-1 text-primary"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">Personel Yönetimi</h5>
                            <p class="card-text text-muted">Personel ekleme, düzenleme ve mazeret yönetimi</p>
                            <a asp-controller="Personel" asp-action="Index" class="btn btn-primary btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i> Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Etüt Planı -->
                <div class="col-md-3">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-calendar-week-fill display-1 text-success"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">Etüt Planı</h5>
                            <p class="card-text text-muted">Aylık etüt planlaması ve yedek atama işlemleri</p>
                            <a asp-controller="Etut" asp-action="Index" class="btn btn-success btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i> Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Mazeretler -->
                <div class="col-md-3">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-file-medical-fill display-1 text-danger"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">Mazeretler</h5>
                            <p class="card-text text-muted">Personel mazeret kayıtları ve takibi</p><br>
                            <a asp-controller="Mazeret" asp-action="Index" class="btn btn-danger btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i>  Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Özel Günler -->
                <div class="col-md-3">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-star-fill display-1 text-warning"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">Özel Günler</h5>
                            <p class="card-text text-muted">Resmi tatiller ve özel günlerin yönetimi</p>
                            <a asp-controller="OzelGun" asp-action="Index" class="btn btn-warning btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i> Git
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- İkame/Birleştirme/Telafi Araçları -->
        <div class="mb-4">
            <h2 class="text-white mb-4 text-center">
                <i class="bi bi-calendar-plus"></i> İkame/Birleştirme/Telafi Araçları
            </h2>
            <div class="row g-4 justify-content-center">
                <!-- İkame/Birleştirme/Telafi -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-calendar-check-fill display-1 text-info"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">İkame/Birleştirme/Telafi</h5>
                            <p class="card-text text-muted">Telafi, ikame ve birleştirme ders yönetimi</p>
                            <a asp-controller="TelafiDers" asp-action="Index" class="btn btn-info btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i> Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Ders Programı -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-lg hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-calendar-week display-1 text-secondary"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">Ders Programı</h5>
                            <p class="card-text text-muted">Haftalık ders programı ve yönetimi</p>
                            <a asp-controller="DersProgrami" asp-action="Index" class="btn btn-secondary btn-lg w-100 mt-3">
                                <i class="bi bi-arrow-right-circle"></i> Git
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2) !important;
    }

    .card {
        border-radius: 15px;
        border: none;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
