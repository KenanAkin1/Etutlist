@model List<Etutlist.Models.TaburTelafiAyarlari>

@{
    ViewData["Title"] = "Telafi Ayarlarý";
}

<div class="container-fluid mt-3">
    <h2><i class="bi bi-gear-fill"></i> Tabur Telafi Ayarlarý</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Bilgilendirme -->
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle-fill"></i> Telafi Ayarlarý Nasýl Çalýþýr?</h5>
        <ul class="mb-0">
            <li><strong>Tabur:</strong> Hangi tabur için ayar yapýyorsunuz (ASEM 1. Tabur, ASEM 2. Tabur, vb.)</li>
            <li><strong>Telafi Yapýlamayacak Gün:</strong> Hangi günün dersleri telafi edilecek (örn: Salý)</li>
            <li><strong>Baþlama Saati:</strong> Telafiler kaçýncý dersten itibaren baþlayacak (örn: 7. ders)</li>
            <li><strong>Telafi Yapýlmayacak Ders Saatleri:</strong> Hangi saatlerdeki dersler telafi edilmeyecek (örn: 1,2,3 = 1., 2. ve 3. saatler telafi edilmeyecek)</li>
        </ul>
    </div>

    <!-- Yeni Ayar Ekle -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Telafi Ayarý Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="TelafiAyariEkle" method="post">
                @Html.AntiForgeryToken()
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Tabur <span class="text-danger">*</span></label>
                        <select name="TaburId" class="form-select" required>
                            <option value="">-- Tabur Seçin --</option>
                            @if (ViewBag.Taburlar != null)
                            {
                                @foreach (var tabur in ViewBag.Taburlar)
                                {
                                    <option value="@tabur.Id">@tabur.TaburAdi (@tabur.Fakulte.Ad)</option>
                                }
                            }
                        </select>
                        <small class="text-muted">Hangi tabur için ayar yapacaksýnýz?</small>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Telafi Yapýlamayacak Gün <span class="text-danger">*</span></label>
                        <select name="TelafiYapilamayacakGun" class="form-select" required>
                            <option value="">-- Gün Seçin --</option>
                            @if (ViewBag.Gunler != null)
                            {
                                @foreach (var gun in ViewBag.Gunler)
                                {
                                    <option value="@gun">@gun</option>
                                }
                            }
                        </select>
                        <small class="text-muted">Bu günün dersleri telafi edilecek</small>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold">Baþlama Saati <span class="text-danger">*</span></label>
                        <select name="TelafiBaslamaSaati" class="form-select" required>
                            @if (ViewBag.Saatler != null)
                            {
                                @foreach (var saat in ViewBag.Saatler)
                                {
                                    <option value="@saat">@saat. Ders</option>
                                }
                            }
                        </select>
                        <small class="text-muted">Telafi kaçýncý dersten baþlasýn?</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Telafi Yapýlmayacak Ders Saatleri</label>
                        <input type="text" name="TelafiYapilamayacakDersSaatleri" class="form-control" 
                               placeholder="1,2,3 veya boþ býrakýn" />
                        <small class="text-muted">Örn: 1,2,3 = 1., 2. ve 3. saatler telafi edilmez. Boþ = Tüm dersler telafi edilir</small>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Ayar Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Mevcut Ayarlar -->
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Mevcut Telafi Ayarlarý (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Tabur</th>
                                <th>Fakülte</th>
                                <th>Kýsým Aralýðý</th>
                                <th>Telafi Yapýlamayacak Gün</th>
                                <th>Baþlama Saati</th>
                                <th>Telafi Yapýlmayacak Saatler</th>
                                <th style="width: 200px;">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ayar in Model)
                            {
                                <tr>
                                    <td><strong>@ayar.Tabur.TaburAdi</strong></td>
                                    <td><span class="badge bg-secondary">@ayar.Tabur.Fakulte.Ad</span></td>
                                    <td>@ayar.Tabur.MinKisimNo - @ayar.Tabur.MaxKisimNo</td>
                                    <td><span class="badge bg-warning text-dark">@ayar.TelafiYapilamayacakGun</span></td>
                                    <td>@ayar.TelafiBaslamaSaati. Ders</td>
                                    <td>
                                        @if (string.IsNullOrWhiteSpace(ayar.TelafiYapilamayacakDersSaatleri))
                                        {
                                            <span class="text-muted">Tümü telafi edilir</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@ayar.TelafiYapilamayacakDersSaatleri</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editModal@(ayar.Id)">
                                            <i class="bi bi-pencil-fill"></i> Düzenle
                                        </button>
                                        <form asp-action="TelafiAyariSil" method="post" style="display:inline;"
                                              onsubmit="return confirm('Bu ayarý silmek istediðinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@ayar.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash-fill"></i> Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                <!-- Düzenleme Modal -->
                                <div class="modal fade" id="editModal@(ayar.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="TelafiAyariDuzenle" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="Id" value="@ayar.Id" />
                                                <input type="hidden" name="TaburId" value="@ayar.TaburId" />
                                                
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Telafi Ayarý Düzenle - @ayar.Tabur.TaburAdi</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mb-3">
                                                        <label class="form-label">Telafi Yapýlamayacak Gün</label>
                                                        <select name="TelafiYapilamayacakGun" class="form-select" required>
                                                            @if (ViewBag.Gunler != null)
                                                            {
                                                                @foreach (var gun in ViewBag.Gunler)
                                                                {
                                                                    <option value="@gun" selected="@(gun == ayar.TelafiYapilamayacakGun)">
                                                                        @gun
                                                                    </option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Baþlama Saati</label>
                                                        <select name="TelafiBaslamaSaati" class="form-select" required>
                                                            @if (ViewBag.Saatler != null)
                                                            {
                                                                @foreach (var saat in ViewBag.Saatler)
                                                                {
                                                                    <option value="@saat" selected="@(saat == ayar.TelafiBaslamaSaati)">
                                                                        @saat. Ders
                                                                    </option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Telafi Yapýlmayacak Ders Saatleri</label>
                                                        <input type="text" name="TelafiYapilamayacakDersSaatleri" 
                                                               value="@ayar.TelafiYapilamayacakDersSaatleri" 
                                                               class="form-control" placeholder="1,2,3 veya boþ" />
                                                        <small class="text-muted">Boþ=Tüm dersler telafi edilir</small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ýptal</button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-check-circle"></i> Kaydet
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Henüz telafi ayarý eklenmemiþ.
                </div>
            }
        </div>
    </div>

    <!-- Örnek Kullaným -->
    <div class="card mt-3 shadow-sm">
        <div class="card-header bg-success text-white">
            <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Örnek Kullaným</h6>
        </div>
        <div class="card-body">
            <p><strong>Senaryo:</strong> ASEM 1. Tabur için Salý günü dersleri telafi edilecek</p>
            <ul class="mb-2">
                <li><strong>Tabur:</strong> ASEM 1. Tabur (Kýsým 1-7)</li>
                <li><strong>Telafi Yapýlamayacak Gün:</strong> Salý</li>
                <li><strong>Baþlama Saati:</strong> 7 (Telafiler 7. dersten baþlar)</li>
                <li><strong>Telafi Yapýlmayacak Saatler:</strong> 1,2 (1. ve 2. saatler atlanýr)</li>
            </ul>
            <p class="mb-0 text-muted"><small>Bu ayar ile Salý günü 3., 4., 5., 6., 7., 8. saatlerdeki dersler telafi edilecek. 1. ve 2. saatler atlanacak.</small></p>
        </div>
    </div>
</div>
