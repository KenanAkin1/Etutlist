@model Etutlist.Models.Fakulte

@{
    ViewData["Title"] = "Fakülte Düzenle";
    var gunler = new[] { "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma" };
    // Mevcut ayarları al, yoksa varsayılan 8 yap
    var mevcutSaatler = Model.SaatlerDizisi;
    if (mevcutSaatler.Length < 5) mevcutSaatler = new int[] { 8, 8, 8, 8, 8 };
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Fakülte Düzenle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="FakulteEdit" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">Fakülte Adı</label>
                            <input type="text" name="ad" class="form-control form-control-lg" value="@Model.Ad" required />
                        </div>

                        <hr />

                        <h6 class="fw-bold text-primary mb-3"><i class="bi bi-clock-history"></i> Günlük Ders Saati Limitleri</h6>
                        <div class="alert alert-info small">
                            <i class="bi bi-info-circle"></i> Excel yüklerken bu sınırlar kullanılacaktır.
                            Örneğin Cuma günü için "4" seçerseniz, Cuma günü 5. saat ve sonrasındaki dersler okunmaz.
                        </div>

                        <div class="row g-3">
                            @for (int i = 0; i < 5; i++)
                            {
                                <div class="col-md">
                                    <label class="form-label small text-muted fw-bold">@gunler[i]</label>
                                    <select name="gunlukSaatler[@i]" class="form-select text-center fw-bold">
                                        @for (int s = 1; s <= 12; s++)
                                        {
                                            // Eğer mevcut ayar varsa onu seç, yoksa varsayılan
                                            <option value="@s" selected="@(mevcutSaatler[i] == s ? "selected" : null)">
                                                @s Ders
                                            </option>
                                        }
                                    </select>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>