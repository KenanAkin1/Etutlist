@model List<Etutlist.Models.Mazeret>

<h2>Mazeret Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Mazeret</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Personel?.Ad</td>
                <td>@item.Baslangic.ToString("dd.MM.yyyy")</td>
                <td>@item.Bitis.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>