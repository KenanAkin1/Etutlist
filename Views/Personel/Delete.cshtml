@model Etutlist.Models.Personel

@{
    ViewData["Title"] = "Personeli Pasif Yap";
}

<div class="container mt-4">
    <h2>
  <i class="bi bi-archive"></i> Personeli Pasif Yap
    </h2>

   @if (TempData["DeleteError"] != null)
    {
   <div class="alert alert-danger alert-dismissible fade show" role="alert">
   <i class="bi bi-exclamation-triangle"></i> @TempData["DeleteError"]
     <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4 border-warning">
        <div class="card-header bg-warning text-dark">
   <h5 class="mb-0">
    <i class="bi bi-info-circle"></i> Personel Bilgileri
      </h5>
        </div>
  <div class="card-body">
            <dl class="row mb-0">
      <dt class="col-sm-3">Id</dt>
 <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Ad Soyad</dt>
          <dd class="col-sm-9"><strong>@(!string.IsNullOrEmpty(Model.Ad) ? Model.Ad : "(—)")</strong></dd>

           <dt class="col-sm-3">Rütbe</dt>
      <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Rutbe) ? Model.Rutbe : "(—)")</dd>

       <dt class="col-sm-3">Durum</dt>
   <dd class="col-sm-9">
       <span class="badge bg-success">Aktif</span>
 </dd>
          </dl>
        </div>
    </div>

    <div class="alert alert-warning">
 <i class="bi bi-exclamation-triangle-fill"></i>
  <strong>Dikkat!</strong> Bu personel <u>silinmeyecek</u>, sadece <strong>pasif</strong> hale getirilecektir.
   <ul class="mt-2 mb-0">
      <li>Eski etüt kayıtları korunacak</li>
  <li>Yeni etüt planlamalarında görünmeyecek</li>
        <li>İsterseniz daha sonra tekrar aktif edebilirsiniz</li>
        </ul>
    </div>

    <form asp-action="Delete" method="post" class="d-inline">
     @Html.AntiForgeryToken()
     <input type="hidden" name="id" value="@Model.Id" />
      <button type="submit" class="btn btn-warning btn-lg" 
       onclick="return confirm('?? @Model.Ad pasif hale getirilecek. Emin misiniz?');">
      <i class="bi bi-archive"></i> Pasif Yap
    </button>
   <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
            <i class="bi bi-arrow-left"></i> Geri
    </a>
    </form>
</div>
