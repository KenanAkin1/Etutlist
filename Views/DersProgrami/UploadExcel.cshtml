@{
    ViewData["Title"] = "Excel Yükle";
    var fakulteler = ViewBag.Fakulteler as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2><i class="bi bi-file-earmark-excel text-success"></i> Ders Programı Excel Yükle</h2>
            <p class="text-muted">Excel (.xlsx) formatındaki ders programını direkt yükleyin.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            @Html.Raw(TempData["Success"]?.ToString().Replace("\n", "<br>"))
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-x-circle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8 col-md-7">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-upload"></i> Dosya Yükleme</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UploadExcel" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label for="fakulteId" class="form-label fw-bold">Fakülte Seçimi <span class="text-danger">*</span></label>
                            <select name="fakulteId" id="fakulteId" class="form-select form-select-lg" required>
                                <option value="">-- Seçiniz --</option>
                                @if (fakulteler != null)
                                {
                                    foreach (var item in fakulteler)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="file" class="form-label fw-bold">Excel Dosyası (.xlsx) <span class="text-danger">*</span></label>
                            <input type="file" class="form-control form-control-lg" id="file" name="file" accept=".xlsx" required>
                            <div class="form-text text-success">
                                <i class="bi bi-file-earmark-excel-fill"></i> Lütfen standart Excel dosyasını olduğu gibi yükleyin. CSV dönüşümü yapmanıza gerek yoktur.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-cloud-upload-fill"></i> Yükle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle-fill"></i> Bilgi</h6>
                </div>
                <div class="card-body">
                    <p class="small">
                        Yükleyeceğiniz Excel dosyası şu yapıda olmalıdır:
                    </p>
                    <ul class="small ps-3">
                        <li><strong>1. Sütun:</strong> Sıra No (S.NO)</li>
                        <li><strong>2. Sütun:</strong> Ders Adı</li>
                        <li><strong>3. Sütun:</strong> Hoca Bilgisi</li>
                        <li><strong>4. Sütun:</strong> D/S (Atlanır)</li>
                        <li><strong>5. Sütun ve sonrası:</strong> Ders Kısımları</li>
                    </ul>
                    <div class="alert alert-light border small">
                        <strong>İpucu:</strong> "4-29" veya "5, 6" gibi birleşik kısımlar otomatik olarak ayrıştırılır.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                var file = $('#file').val();
                if (!file) {
                    e.preventDefault();
                    alert('Lütfen bir dosya seçin!');
                    return false;
                }
                // Butonu kilitle
                var btn = $(this).find('button[type="submit"]');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>İşleniyor...');
            });
        });
    </script>
}