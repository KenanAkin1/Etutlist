@model IEnumerable<Etutlist.Models.OzelGun>

@{
    ViewData["Title"] = "Özel Günler";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="bi bi-star-fill text-warning"></i> Özel Günler
                </h2>
                <div>
                    <a asp-action="Create" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Yeni Özel Gün Ekle
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-house"></i> Ana Sayfa
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="card shadow">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul"></i> Özel Gün Listesi
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 5%;">
                                            <i class="bi bi-hash"></i>
                                        </th>
                                        <th style="width: 25%;">
                                            <i class="bi bi-calendar-date"></i> Tarih
                                        </th>
                                        <th style="width: 50%;">
                                            <i class="bi bi-card-text"></i> Açıklama
                                        </th>
                                        <th style="width: 20%;" class="text-center">
                                            <i class="bi bi-gear"></i> İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sira = 1;
                                        var sortedModel = Model.OrderBy(g => g.Tarih);
                                    }
                                    @foreach (var g in sortedModel)
                                    {
                                        var gecti = g.Tarih.Date < DateTime.Today;
                                        var bugun = g.Tarih.Date == DateTime.Today;
                                        var rowClass = bugun ? "table-info" : (gecti ? "table-secondary" : "");

                                        <tr class="@rowClass">
                                            <td class="text-center">
                                                <strong>@sira</strong>
                                            </td>
                                            <td>
                                                <strong>@g.Tarih.ToString("dd.MM.yyyy")</strong>
                                                <br />
                                                <small class="text-muted">
                                                    @g.Tarih.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))
                                                </small>
                                                @if (bugun)
                                                {
                                                    <br />
                                                    <span class="badge bg-primary">Bugün</span>
                                                }
                                                @if (gecti)
                                                {
                                                    <br />
                                                    <span class="badge bg-secondary">Geçti</span>
                                                }
                                            </td>
                                            <td>
                                                <i class="bi bi-star-fill text-warning"></i>
                                                <strong>@g.Aciklama</strong>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@g.Id" 
                                                       class="btn btn-sm btn-primary" title="Düzenle">
                                                        <i class="bi bi-pencil"></i> Düzenle
                                                    </a>
                                                    @{
                                                        var confirmMesaj = $"⚠️ {g.Aciklama} ({g.Tarih:dd.MM.yyyy}) silinecek.\\n\\nEmin misiniz?";
                                                    }
                                                    <form asp-action="DeleteConfirmed" method="post" class="d-inline"
                                                          onsubmit="return confirm('@confirmMesaj');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@g.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                                            <i class="bi bi-trash"></i> Sil
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        sira++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <i class="bi bi-info-circle"></i> Toplam <strong>@Model.Count()</strong> özel gün kaydı bulunmaktadır.
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-info-circle display-1 text-muted mb-3"></i>
                    <h4>Henüz özel gün kaydı bulunmamaktadır.</h4>
                    <p class="text-muted mb-4">Resmi tatiller ve özel günleri ekleyerek etüt planlamasını daha verimli hale getirebilirsiniz.</p>
                    <a asp-action="Create" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> İlk Özel Günü Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
