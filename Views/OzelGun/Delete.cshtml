@model Etutlist.Models.OzelGun

@{
    ViewData["Title"] = "Özel Gün Sil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-trash"></i> Özel Gün Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Özel gün kaydı kalıcı olarak silinecektir.
                    </div>

                    <div class="mb-4">
                        <h4 class="mb-3">Silinecek Özel Gün:</h4>
                        <dl class="row">
                            <dt class="col-sm-3">
                                <i class="bi bi-calendar-date"></i> Tarih:
                            </dt>
                            <dd class="col-sm-9">
                                <strong>@Model.Tarih.ToString("dd.MM.yyyy dddd", new System.Globalization.CultureInfo("tr-TR"))</strong>
                            </dd>

                            <dt class="col-sm-3">
                                <i class="bi bi-card-text"></i> Açıklama:
                            </dt>
                            <dd class="col-sm-9">
                                <strong>@Model.Aciklama</strong>
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" 
                                    onclick="return confirm('⚠️ @Model.Aciklama silinecek. Emin misiniz?');">
                                <i class="bi bi-trash-fill"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
